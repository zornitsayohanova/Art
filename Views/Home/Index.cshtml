@model ArtFeverShop.Models.ItemsAndCategories
@{
     ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/css/women.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/css/cactus.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/css/city.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="shape-container"> </div>

<div class="products-title">Всички <br> продукти </div>

<div class="background">
     <div class="items-container">
         <div class="scroller">
             @if (Model.AllItems.Count != 0)
              {
                  @foreach (var item in Model.AllItems)
                   {
                       <div class="card">
                           <div class="card-body">
                                <div class="item-info">
                                    <img src="@item.ImageUrl">
                                    <p>@Html.DisplayFor(modelItem => item.Name) </p>
                                    <p>Цена: @Html.DisplayFor(modelItem => item.Price) лв.</p>
                                    <p>
                                        <a asp-controller="Item" asp-action="DetailsItem" asp-route-id="@item.ItemId">Детайли</a> |
                                        <a asp-controller="Item" asp-action="EditItem" asp-route-id="@item.ItemId">Редактирай</a> |
                                        <a asp-controller="Item" asp-action="DeleteItem" asp-route-id="@item.ItemId">Изтрий</a>
                                    </p>
                                </div>
                           </div>
                       </div>
                   }
              }
              else
              {
                   <p>В момента няма продукти.</p>
              }
         </div>
     </div>
</div>

<script>

    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n)
    {
        showSlides(slideIndex += n);
    }

    function currentSlide(n)
    {
        showSlides(slideIndex = n);
    }

    function showSlides(n)
    {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++)
        {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++)
        {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
    }
</script>
