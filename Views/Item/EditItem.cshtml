@model ArtFeverShop.Models.ItemsAndCategories

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Item.ItemId" />
            <div class="form-group">
                <label class="control-label"> Име </label>
                <input asp-for="@Model.Item.Name" class="form-control" />
                <span asp-validation-for="@Model.Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Кратко описание</label>
                <input asp-for="@Model.Item.ShortDescription" class="form-control" />
                <span asp-validation-for="@Model.Item.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Дълго описание </label>
                <input asp-for="@Model.Item.LongDescription" class="form-control" />
                <span asp-validation-for="@Model.Item.LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Цена </label>
                <input asp-for="@Model.Item.Price" class="form-control" />
                <span asp-validation-for="@Model.Item.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">URL адрес на снимката</label>
                <input asp-for="@Model.Item.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.Item.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Име на категорията</label>
                @Html.DropDownListFor(
                y => y.Item.CategoryName,
                new SelectList(Model.AllCategories.Select(x => new { Value = x.CategoryName, Text = x.CategoryName }),
                "Value", "Text"))
                <span asp-validation-for="Item.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">В наличност</label>
                <input asp-for="@Model.Item.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Item.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Промени" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>