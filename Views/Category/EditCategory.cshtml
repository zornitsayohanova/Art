@model ArtFeverShop.Models.ItemsAndCategories

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Category.CategoryId" />
            <div class="form-group">
                <label class="control-label">Име</label>
                <input asp-for="@Model.Category.CategoryName" class="form-control" />
                <span asp-validation-for="@Model.Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Описание</label>
                <input asp-for="@Model.Category.Description" class="form-control" />
                <span  asp-validation-for="@Model.Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Промени" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


