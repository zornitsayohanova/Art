@model ArtFeverShop.Models.ItemsAndCategories

@{
    ViewData["Title"] = "Delete";
}

<div class="product-info">
    <label>Сигурни ли сте, че искате да изтриете категорията?</label>
    <dl class="row-2">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
    </dl>

    <form asp-action="DeleteCategory">
        <input type="hidden" asp-for="@Model.Category.CategoryId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
    </form>
</div>
